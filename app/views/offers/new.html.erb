<%= render 'navbar' %>
<h1>Créez votre offre</h1>
<div class="form-container" id="offers-form">
  <%= simple_form_for @offer do |f| %>
    <div class="form-inputs", style="background-color: #fff; margin: 20px auto;
      width: 100%; padding: 30px; box-sizing: border-box; border-radius: 10px;">
      <%= f.input :title, label: "Titre de l'annonce :", autofocus: true%>
      <%= f.input :description, label: 'Décris ton annonce', autofocus: true %>
      <%= f.input :price, label: 'Quel est ton prix par jour ?', autofocus: true %>
      <%= f.input :photos, as: :file, input_html: { multiple: true }, label: 'Ajoute tes plus belles photos !' %>
      <%= f.input :localisation, label: 'Dans quelle ville/région ?',
        input_html: {data: {localisation_autocomplete_target: "localisation"}, class: "d-none"},
        wrapper_html: {data: {controller: "localisation-autocomplete", localisation_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
      %>
      <%= f.submit "Envoyer", class: "button" %>
    </div>
  <% end %>
</div>
<div class="footer"><%= render 'footer' %></div>
