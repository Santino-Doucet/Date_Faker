<div class="card mt-0 mb-3">
    <h1>top-bar</h1>
</div>
<div class="container">
  <div class="card">
    <div class="row">
      <div class="col-lg-12">
          <h1><%= @offer.title %></h1>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-between">
    <% @offer.photos.each do |p| %>
      <div class="card">
        <%= cl_image_tag p.key, height: 200, width: 300, crop: :fill %>
      </div>
    <% end %>
  </div>
  <div class="card">
      <div class="row">
      <div class="col-lg-12">
        <p>Ville : <%= @offer.localisation %></p>
      </div>
    </div>
  </div>
    <div class="card">
      <div class="row">
      <div class="col-lg-12">
        <p><%= @offer.description %></p>
        <p><%= @offer.user.first_name %> <%= @offer.user.last_name %></p>
      </div>
    </div>
  </div>
</div>
